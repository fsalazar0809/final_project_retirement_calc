<div >
  <h5>
    Edit Personal Information Account
  </h5>

  <% if @personal_information.errors.any? %>
  <% @personal_information.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_personal_information" method="post">
              

                                    
      <div>
        <label for="current_age_box">Current age</label>
          
        <input id="current_age_box" name="query_current_age" value="<%= @current_personal_information.current_age %>">
          
      </div>
                      
      <div>
        <label for="retirement_age_box">Retirement age</label>
          
        <input id="retirement_age_box" name="query_retirement_age" value="<%= @current_personal_information.retirement_age %>">
          
      </div>
                      
      <div>
        <label for="retirement_savings_box">Retirement savings</label>
          
        <input id="retirement_savings_box" name="query_retirement_savings" value="<%= @current_personal_information.retirement_savings %>">
          
      </div>
                      
      <div>
        <label for="return_on_savings_box">Return on savings</label>
          
        <input id="return_on_savings_box" name="query_return_on_savings" value="<%= @current_personal_information.return_on_savings %>">
          
      </div>
                      
      <div>
        <label for="life_expectancy_box">Life expectancy</label>
          
        <input id="life_expectancy_box" name="query_life_expectancy" value="<%= @current_personal_information.life_expectancy %>">
          
      </div>
                      
      <div>
        <label for="monthly_contribution_box">Monthly contribution</label>
          
        <input id="monthly_contribution_box" name="query_monthly_contribution" value="<%= @current_personal_information.monthly_contribution %>">
          
      </div>
                      
      <div>
        <label for="user_id_box">User</label>
          
        <input id="user_id_box" name="query_user_id" value="<%= @current_personal_information.user_id %>">
          
      </div>
                      
      <div>
        <label for="budget_id_box">Budget</label>
          
        <input id="budget_id_box" name="query_budget_id" value="<%= @current_personal_information.budget_id %>">
          
      </div>
              
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a new password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your new password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
